<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>


        <LinearLayout
            android:id="@+id/pizza-fries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="38dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pizza"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginLeft="40dp"
                android:onClick="pizza"
                android:src="@drawable/pizza_icon"
                android:tag="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fries"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginLeft="140dp"
                android:onClick="fries"
                android:src="@drawable/fries_icon"
                android:tag="2"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="10dp"
                android:text="Pizza"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="177dp"
                android:layout_marginTop="10dp"
                android:text="Fries"
                android:textSize="25sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="38dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/drink-waffle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/coke"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginLeft="40dp"
                android:onClick="coke"
                android:src="@drawable/drink_icon"

                android:tag="5" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/waffle"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginStart="140dp"
                android:onClick="waffleOrder"
                android:src="@drawable/waffle_icon"
                android:tag="6"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:text="Beverages"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="133dp"
                android:layout_marginTop="10dp"
                android:text="Waffles"
                android:textSize="25sp" />

        </LinearLayout>

        <Button
            android:id="@+id/Customise"
            android:onClick="CustomiseMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Customise"
            android:background="@drawable/button_style"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="282dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/burger-dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/burger"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginLeft="40dp"
                android:onClick="burger"
                android:src="@drawable/burger_icon"
                android:tag="3"

                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/hotdog"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginLeft="140dp"
                android:onClick="hotDog"
                android:src="@drawable/hotdog_icon"
                android:tag="4"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Burger"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="10dp"
                android:text="Hotdog"
                android:textSize="25sp" />

        </LinearLayout>



    </LinearLayout>






</RelativeLayout>