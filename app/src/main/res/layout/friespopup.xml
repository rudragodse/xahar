<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/friesImageHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/papprikash"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/papprikash"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Paprikash Fries"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Fries, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:onClick="cartActivity"
                        android:tag="Papprikash fries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/chillefries"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/herbedfries"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Herbed Fries"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Fries, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:onClick="cartActivity"
                        android:tag="Herbed Fries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/limefries"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/chillefries"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Chille Lime Fries"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Fries, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:tag="Chilli Lime Fries"
                        android:onClick="cartActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mexicanFries"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/mexicanfries"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Mexican Fries"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Fries, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:onClick="cartActivity"
                        android:tag="Mexican Fries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>






        </LinearLayout>

    </RelativeLayout>

</ScrollView>