<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/burgerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/burgerImageHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hamburger"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/hamburger"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic Hamburger"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Burger, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />



                    <Button
                        android:id="@+id/ClassicHamburger"
                        android:onClick="cartActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:tag="Classic Hamburger"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/baconburger"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/baconcheeseburger"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Bacon Chesse Burger"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Burger, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:id="@+id/BaconCheese"
                        android:tag="Bacon Cheese Burger"
                        android:onClick="cartActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/baconwhopperburger"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/baconwhopperburger"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bacon Whopper Burger"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Fries, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:onClick="cartActivity"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/jalepinoburger"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:src="@drawable/jalepino_burger"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jalepino Burger"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A hugely popular Burger, with a deliciously tangy single cheese topping"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min order:\n150Rs"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />


                    <Button
                        android:onClick="cartActivity"
                        android:tag="Jalepino Burger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Order Now"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/popbuttondesign"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>